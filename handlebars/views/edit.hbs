<div class="signup-container">
  <form>
    <div class="signup-header">Update User</div>
    <label for="name">Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      class="signup-input"
      placeholder="Enter name"
      value="{{userData.name}}"
      required
    />

    <label for="password">Password:</label>
    <input
      type="password"
      id="password"
      name="password"
      class="signup-input"
      placeholder="Enter password"
      value="{{userData.password}}"
      required
    />

    <label for="confirm">Confirm password:</label>
    <input
      type="password"
      id="confirm"
      name="confirm"
      class="signup-input"
      placeholder="Confirm password"
      value="{{userData.password}}"
      required
    />

    <label for="dob">Date of birth:</label>
    <input
      type="date"
      id="dob"
      name="dob"
      class="signup-input"
      placeholder="Enter date"
      value="{{userData.dob}}"
      required
    />

    <label for="dob">Email:</label>
    <input
      type="text"
      id="email"
      name="email"
      class="signup-input"
      placeholder="Enter email"
      value="{{userData.email}}"
      required
    />

    <div id="gender">
      <label><input type="radio" id="male" name="gender" value="M" {{#if (eq userData.gender 'M')}}checked{{/if}} />
        Male</label>
      <label><input type="radio" id="female" name="gender" value="F" {{#if (eq userData.gender 'F')}}checked{{/if}} />
        Female</label>
      <label><input type="radio" id="other" name="gender" value="O" {{#if (eq userData.gender 'O')}}checked{{/if}} />
        Other</label>
    </div>
    <br />

    <label for="mobile">Mobile:</label>
    <input
      type="number"
      min="0"
      id="mobile"
      name="mobile"
      class="signup-input"
      placeholder="Enter mobile"
      value="{{userData.mobile}}"
      required
    />

    <div class="buttons">
      <button id="update" class="btn">Update</button>
    </div>
  </form>
</div>