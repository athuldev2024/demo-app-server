{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended", // Enables the recommended ESLint rules
    "plugin:prettier/recommended" // Enables Prettier and shows formatting errors as ESLint errors. Make sure this is the last configuration in the extends array.
  ],
  "plugins": ["prettier"], // Use Prettier as an ESLint plugin
  "rules": {
    "prettier/prettier": "error", // Treat Prettier issues as ESLint errors
    "no-unused-vars": "warn", // Example of overriding ESLint rules
    "semi": ["error", "always"], // Enforce semicolons
    "quotes": ["error", "double"] // Enforce double quotes
  }
}
